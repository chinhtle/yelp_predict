<h1>Business Homepage</h1>

<%= form_tag(business_results_path, method: "post") do %>
  <div class="col-lg-6 col-md-offset-3">
    <div class="input-group">
      <input type="text" class="form-control"
             data-autocomplete="businesses/autocomplete_business_name"
             id="business_params" name="business_params[name]"
             placeholder="Please enter a business name">
      <span class="input-group-btn">
    	    	<%= button_to "Submit", business_results_path , class: "btn btn-default", method: :post %>
      </span>
    </div><!-- /input-group -->
  </div><!-- /.col-lg-6 -->
  </span>
<% end %>
